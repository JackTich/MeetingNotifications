<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="@dimen/margin_meetings_list_layout"
    android:layout_marginEnd="@dimen/margin_meetings_list_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleItemListMeetings"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/primaryText"
        android:textStyle="bold"
        android:lines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containerTimeDateItemListMeetings"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvTitleItemListMeetings"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDateItemListMeetings"
            android:layout_weight="1"
            android:lines="1"
            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/primaryText"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tvTimeItemListMeetings"
            android:lines="1"
            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/primaryText"
            android:gravity="center"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/containerTimeDateItemListMeetings"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgItemListMeetings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameItemListMeetings"
            android:singleLine="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgItemListMeetings"
            app:layout_constraintBottom_toTopOf="@id/tvEmailItemListMeetings"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/big_text_size"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmailItemListMeetings"
            android:textColor="@color/primaryText"
            android:singleLine="true"
            android:textSize="@dimen/big_text_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tvNameItemListMeetings"
            app:layout_constraintTop_toBottomOf="@id/tvNameItemListMeetings"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>